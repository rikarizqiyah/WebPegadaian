@model IEnumerable<WebPegadaian.Models.User>

@{
    ViewBag.Title = "Index";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Data Users</h1>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <a href="@Url.Action("Create", "Users", "Create") type=" button" class="btn btn-primary">Create</a>
                        @*@Html.ActionLink("Create User", "Create")*@
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Identity Type</th>
                                    <th>Identity Number</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Identity_Type)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Identity_Number)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Gender)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            <a type="button" class="btn btn-warning" href="@Url.Action("Edit", "Users", new { id = item.Id })">Edit</a>
                                            <a type="button" class="btn btn-danger" href="@Url.Action("Delete", "Delete", new { id = item.Id })">Delete</a>
                                            <a type="button" class="btn btn-primary" href="@Url.Action("Detail", "Users", new { id = item.Id })">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->
