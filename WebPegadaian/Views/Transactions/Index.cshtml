@model IEnumerable<WebPegadaian.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Data Transaksi</h1>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        @Html.ActionLink("New Transaction", "Create")
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Transaction Date</th>
                                    <th>Administrative Cost</th>
                                    <th>Loan Amount</th>
                                    <th>Approved Date</th>
                                    <th>Approved Status</th>
                                    <th>Accepted Date</th>
                                    <th>Accepted Status</th>
                                    <th>Customer Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Transaction_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Administrative_Cost)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Loan_Amount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Approved_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Approved_Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Accepted_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Accepted_Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->
